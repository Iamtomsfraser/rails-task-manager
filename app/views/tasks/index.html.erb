<div class="container-sm">
    <h1>My tasks</h1>
      <ul>
        <input type="checkbox">
        <% @tasks.each do |task| %>
        <%= link_to task.title, task_path(task.id) %>
  <% end %>
      </ul>
    <i class="fa-solid fa-plus fa-rotate-180" style="color: #B197FC;"></i>
    <%=link_to "Add a new task", tasks_new_path%>
</div>
